/* pages/list/index.wxss */

page {
    background: #f6f6f6;
}

.content {
    padding: 0;
}

.list {
    padding-top: 20rpx;
}

.item {
    overflow: hidden;
    background: #fff;
    margin-bottom: 20rpx;
    display: flex;
    font-size: 28rpx;
}
.item-icon {
    margin: 50rpx 0 40rpx 0;
    width: 190rpx;
    text-align: center;
    font-size: 24rpx;
    line-height: 1;
    color: #333;
    border-right: 1rpx solid #eee;
}

.icon-image {
    height: 85rpx;
    width: 93rpx;
    margin-bottom: 20rpx;
    line-height: 1;
}
.item-content {
    position: relative;
    padding: 40rpx 30rpx 40rpx 0;
    line-height: 1;
    font-size: 24rpx;
    width: 100%;
    padding-left: 40rpx;
} 
.item .css_arr1{
    position: absolute;
    right: 40rpx;
    top: 50%;
    margin-top: -10rpx;
}

.item-title {
    margin-bottom: 22rpx;
    font-size: 28rpx;
    color: #333;
}
.item-code {
    color: #666;
    margin-left: 10rpx;
    font-size: 28rpx;
    font-weight: 300;
}
.item-rate {
    margin-bottom: 26rpx;
    color: #666;
}
.rate-percent {
    color: #fb5c5f;
    font-size: 40rpx;
    margin-left: 20rpx;
}
.item-feature {
    display: inline-block;
    font-size: 20rpx;
    background: #fee7e7;
    color: #fb5c5f;
    padding: 10rpx 20rpx;
    border-radius: 20rpx;
}
.slide-image {
    width: 100%;
    height: 300rpx;
}