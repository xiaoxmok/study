/* pages/list/index.wxss */

page {
    background: #f6f6f6;
}

.content {
    padding: 0;
}

.list {
    padding-top: 20rpx;
}

.item {
    background: #fff;
    padding: 40rpx 30rpx 40rpx 0;
    margin-bottom: 20rpx;
    display: flex;
    font-size: 14px;
}
.item-icon {
    width: 182rpx;
    text-align: center;
    font-size: 12px;
    color: #999;
    padding-top: 20rpx;
}

.icon-image {
    height: 91rpx;
    width: 84rpx;
    line-height: 1;
}
.item-content {
    line-height: 1;
    font-size: 24rpx;
    border-left: 1rpx solid #eee;
    padding-left: 36rpx;
    flex: 1;
} 

.item-title {
    margin-bottom: 24rpx;
    font-size: 28rpx;
}
.item-rate {
    margin-bottom: 30rpx;
}
.rate-percent {
    color: #fb5c5f;
    font-size: 20px;
    margin-left: 20rpx;
}
.item-feature {
    display: inline-block;
    font-size: 10px;
    background: #fee7e7;
    color: #fb5c5f;
    padding: 10rpx 20rpx;
    border-radius: 20rpx;
}

.item-description {
    color: #666;
    line-height: 1.5;
    margin-bottom: -10rpx
}

.slide-image {
    width: 100%;
}
