/* pages/details/fund.wxss */

page{ background: #f6f6f6; font-family: microsoft yahei; }

/*标题*/
.fund_title{ height: 95rpx; line-height: 95rpx; font-size: 30rpx; color: #333; padding: 0 28rpx; }
.fund_title .fund_id{ font-size: 24rpx; margin: 0 0 0 12rpx; }

/*介绍*/
.fund_intro{ font-size: 28rpx; color: #666; background: #fff; padding: 25rpx 10rpx 25rpx 33rpx; }
.fund_intro .intro_item{ display: inline-block; vertical-align: top; width: 50%; height: 58rpx; line-height: 58rpx; overflow: hidden; white-space: nowrap; text-overflow: ellipsis; }
.fund_intro .intro_item .del{ margin-right: 15rpx; }

/*数据*/
.fund_data{ margin: 20rpx 0 0 0; padding: 20rpx 0 40rpx 0; background: #fff; color: #666; }
.fund_data_intro{ position: relative; height: 62rpx; line-height: 62rpx; padding: 0 0 0 32rpx; }
.fund_data_intro .intro_s1{}
.fund_data_intro .intro_s2{ margin: 0 0 0 50rpx; }
.fund_data_intro .css_arr1{ position: absolute; right: 28rpx; top: 50%; margin-top: -10rpx; }
.fund_data_canvas{ height: 398rpx; margin: 25rpx 0 0 0; }
.fund_data_canvas_c{ height: 100%; width: 90%; margin: 0 auto; }
.fund_data_button{ text-align: center;}
.fund_data_button .fund_btn1{ margin: 20rpx 22rpx 0; vertical-align: top; }

/*经理*/
.fund_manager_title{ height: 70rpx; line-height: 70rpx; font-size: 28rpx; color: #333; text-align: center; }
.manager_item{ position: relative; background: #fff; min-height: 240rpx; padding: 40rpx 28rpx 40rpx 230rpx; font-size: 24rpx; line-height: 36rpx; color: #666666; }
.manager_item .manager_img{ position: absolute; left: 32rpx; top: 40rpx; width: 180rpx; height: 240rpx; background: #eee; }
.manager_item .manager_right{ padding: 5px 0 0 0; }
.manager_item .manager_name{ font-size: 28rpx; line-height: 38rpx; color: #333333; padding: 0 0 22rpx 0; }
.manager_item .manager_intro{ height: 144rpx; overflow: hidden; }
.manager_item .manager_go{ position: absolute; right: 28rpx; top: 45rpx; color: #148ce6; }
/*经理详情页*/
.manager_item_details{ margin-bottom: 20rpx; }
.manager_item_details .manager_right{ padding-top: 25rpx; height: 215rpx;}
.manager_item_details .manager_intro{ margin-left: -198rpx; margin-top: 23rpx; height: auto; overflow: visible; }